<section class="post__title">
	<h2><%= @post.title %></h2>
	<p>By <%= link_to @post.author, root_path(author: @post.author.downcase.to_param) %></p>
	<p>
	<small>Posted <%= time_ago_in_words @post.created_at %> ago.</small>
	</p>

<!-- Remember to add publication logic -->


<div class="actions">
	<%= link_to "home", root_path, class: "actions__link"%>
	<span>•</span>
	<%= link_to "edit", edit_post_path(@post), class: "actions__link" %>
	<span>•</span>
	<%= link_to "delete", post_path(@post), method: :delete, confirm: true, class: "actions__link" %>

	
</div>

<div> <!-- Refactor into helper -->
<% @post.pull_quote %></div>
</section>

<section class="post__body">
	<%= simple_format @post.body %>

	<section class="post__comments">
	<h3>Comments</h3>
<!-- loop over @comments -->
<div>
	<small><% @comments.each do |comment| %>
		<%= simple_format comment.body %>
		<p> Commented by <%= comment.commenter_name %>.
	<% end %>
	</small>
</div>
</section>
</section>

